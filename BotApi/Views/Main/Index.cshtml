@using Microsoft.AspNetCore.Localization
@using System.Globalization

@model dynamic
@{
    ViewData["Title"] = "Bot App";
}
<environment include="Development">
    <link rel="stylesheet" href="http://localhost:3000/js/_app-bundle.css" />
</environment>
<environment exclude="Development">
    <link rel="stylesheet" href="/build/_app-bundle.css" asp-append-version="true" />
</environment>
<div id="root"></div>

@section scripts
    {
    <environment include="Development">
        <script type="text/javascript" src="http://localhost:3000/js/_app-bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="/build/_app-bundle.js" asp-append-version="true"></script>
    </environment>
}
